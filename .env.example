#######################################
# Database Configuration
#######################################
# Example: postgresql://<user>:<password>@<host>:<port>/<database>?schema=<schema>
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/postgres?schema=public"

#######################################
# Authentication & Security
#######################################
# Secret key for signing JWTs (change this in production!)
JWT_SECRET="super-secret-key"

# Access token expiration time (e.g., "7d", "24h", "15m")
ACCESS_TOKEN_EXPIRES_IN="7d"

#######################################
# Application Settings
#######################################
# Node environment: "development" | "production" | "test"
NODE_ENV=development

# API server port
PORT=4000

#######################################
# Supabase Configuration
#######################################
# Supabase project URL (from your Supabase dashboard)
SUPABASE_URL="https://xyz.supabase.co"

# Supabase service role key
SUPABASE_SERVICE_ROLE_KEY="service-role-key-with-permissions"

# Ensure the Supabase Storage has a bucket named "product"
# You can create one from Supabase Dashboard → Storage → Create Bucket
